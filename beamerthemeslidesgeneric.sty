% minimalistic bibliography sytle
\setbeamertemplate{bibliography item}[text]

% insert a huge title frame for each new section
\AtBeginSection[]{
  \begin{frame}[plain]
    \addtocounter{framenumber}{-1}
    \vfill
    \centering\usebeamerfont{title}\huge\insertsectionhead\par
    \vfill
  \end{frame}
}

